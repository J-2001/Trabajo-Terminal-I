<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradienteuno"
    tools:context=".MainActivity">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

       <!--app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"-->

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="180dp"
           android:layout_marginVertical="50dp"
           android:contentDescription="@string/logotipo"
           android:scaleType="centerInside"
           android:src="@drawable/ic_logoappfondo"
           tools:ignore="ImageContrastCheck" />

       <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_btn_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_01"
            android:textSize="17sp"
           android:backgroundTint="@color/background_tint_01"
           android:textColor="@color/text_color_01"
            android:maxLines="2"
            android:layout_weight="1"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="38dp"
            app:icon="@drawable/ic_eye" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_btn_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:backgroundTint="@color/background_tint_01"
            android:textColor="@color/text_color_01"
            android:text="@string/main_btn_02"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="38dp"
            app:icon="@drawable/ic_batery" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_btn_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:backgroundTint="@color/background_tint_01"
            android:textColor="@color/text_color_01"
            android:text="@string/main_btn_03"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="38dp"
            app:icon="@drawable/ic_coo" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/main_btn_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/main_btn_04"
            android:textSize="17sp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_tint_01"
            android:textColor="@color/text_color_01"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="38dp"
            app:icon="@drawable/ic_sostenible" />

       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/main_tv"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_marginBottom="40dp"
           android:layout_weight="1"
           android:gravity="center"
           android:text="@string/main_tv_01"
           android:textColor="@color/black"
           android:textSize="20sp"
           android:textStyle="bold"
           tools:ignore="TextSizeCheck" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>