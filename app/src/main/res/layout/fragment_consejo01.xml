<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    tools:context=".Consejo01Fragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/frag_01_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frag_01_tv_01"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:maxLines="2"
            android:padding="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/frag_01_iv_01"
            android:contentDescription="@string/frag_01_iv_01"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/frag_01_tv_02"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/frag_01_iv_02"
            android:contentDescription="@string/frag_01_iv_02"
            android:scaleType="centerInside"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>