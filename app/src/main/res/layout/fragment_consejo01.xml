<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consejo01Fragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/frag_01_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frag_tv_0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frag_01_tv_01"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="24dp"
                android:textColor="?attr/colorOnBackground"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/frag_01_iv_01"
                android:contentDescription="@string/frag_01_iv_01"
                android:scaleType="centerInside"
                android:layout_marginVertical="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:text="@string/frag_01_tv_02"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnBackground"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/frag_01_iv_02"
                android:contentDescription="@string/frag_01_iv_02"
                android:scaleType="centerInside"
                android:layout_marginVertical="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
