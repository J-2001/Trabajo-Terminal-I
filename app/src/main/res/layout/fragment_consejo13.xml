<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="16dp"
    tools:context=".Consejo09Fragment"
    android:background="@drawable/gradienteuno"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fragment_consejo11.xml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/gradientedos"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_13_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="@string/consejo"
            />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/frag_11_tv_01"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logoenergi"
            android:contentDescription="@string/frag_05_iv_01"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:text="@string/frag_11_tv_02"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!--
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar Alarma"
            android:backgroundTint="#4d82bc"
            android:textColor="#FCFFFF"
            android:layout_gravity="center"
            app:icon="@drawable/ic_alarm"
            android:layout_marginTop="8dp"/>
        -->
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
