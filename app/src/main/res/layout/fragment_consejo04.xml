<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="16dp"
    tools:context=".Consejo04Fragment"
    android:background="@drawable/gradienteuno"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            tools:text="@string/consejo"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_04_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frag_04_tv_01"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/ic_descargacompleta"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/frag_04_iv_01"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold|italic"
            android:text="@string/frag_04_tv_02"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginBottom="16dp"/>

        <!-- Aquí se podría colocar una recomendación para
             establecer una alarma o notificación cuando el
             teléfono tenga un 20% de batería -->

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar Alarma"
            android:backgroundTint="#4d82bc"
            android:textColor="#FCFFFF"
            android:layout_gravity="center"
            app:icon="@drawable/ic_alarm"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
