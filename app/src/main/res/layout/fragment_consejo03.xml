<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="16dp"
    tools:context=".Consejo03Fragment"
    android:background="@drawable/gradienteuno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/gradientedos"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_03_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="@string/consejo"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frag_03_tv_01"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:maxLines="2"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/ic_reparar"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/frag_03_iv_01"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textStyle="bold|italic"
            android:text="@string/frag_03_tv_02"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            tools:ignore="VisualLintLongText" />

        <!-- Aquí se podría colocar una recomendación para
             buscar en Maps, lugares cercanos que reparan
             teléfonos -->
        <!--
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar en Maps"
                    android:backgroundTint="#4d82bc"
                    android:textColor="#FCFFFF"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_mapa"
                    android:layout_marginTop="8dp"/>
        -->
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
