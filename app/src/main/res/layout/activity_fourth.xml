<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fourthActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourth_tv_01"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="35dp"/>

            <TextView
                android:id="@+id/fourth_tv_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourth_tv_11"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/footprint"
                android:gravity="center"
                android:layout_marginBottom="35dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourth_tv_02"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/fourth_iv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gasoline"
                    android:contentDescription="@string/fourth_iv_01"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="25dp"/>

                <TextView
                    android:id="@+id/fourth_tv_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth_tv_12"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/fourth_iv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vehicle"
                    android:contentDescription="@string/fourth_iv_02"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="25dp"/>

                <TextView
                    android:id="@+id/fourth_tv_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth_tv_13"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/fourth_iv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gas"
                    android:contentDescription="@string/fourth_iv_03"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="25dp"/>

                <TextView
                    android:id="@+id/fourth_tv_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth_tv_14"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="45dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/fourth_iv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/coal"
                    android:contentDescription="@string/fourth_iv_04"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="25dp"/>

                <TextView
                    android:id="@+id/fourth_tv_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth_tv_15"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fourth_btn_01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/fourth_btn_01_0"
                android:textSize="18sp"
                android:maxLines="3"
                android:backgroundTint="#8CAFF3"
                app:icon="@drawable/ic_eye"
                android:layout_marginHorizontal="45dp"
                android:layout_marginBottom="30dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/fourth_chart_01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4dp"/>

            <TableLayout
                android:id="@+id/fourth_tablay_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>