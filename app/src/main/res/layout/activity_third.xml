<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thirdActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/third_tv_01"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="0dp"/>
            
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/third_chart_01"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginHorizontal="5dp"/>

            <Button
                android:id="@+id/third_btn_01"
                android:text="@string/third_btn_01_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="#8CA"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="5dp"
                android:drawableBottom="@drawable/ic_eye"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/third_tablay_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </HorizontalScrollView>

            <Button
                android:id="@+id/third_btn_02"
                android:text="@string/third_btn_02_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="#8CA"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="5dp"
                android:drawableBottom="@drawable/ic_eye"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/third_tablay_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </HorizontalScrollView>

            <Button
                android:id="@+id/third_btn_03"
                android:text="@string/third_btn_03_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="#8CA"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="5dp"
                android:drawableBottom="@drawable/ic_eye"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/third_tablay_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </HorizontalScrollView>

            <Button
                android:id="@+id/third_btn_04"
                android:text="@string/third_btn_04_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="#8CA"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="5dp"
                android:drawableBottom="@drawable/ic_eye"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/third_tablay_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>