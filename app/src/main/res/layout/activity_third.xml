<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thirdActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver el Comportamiento de la Batería"
                android:gravity="center"/>

            <Button
                android:id="@+id/third_btn_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Datos de la Batería"/>

            <TableLayout
                android:id="@+id/third_tablay_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <Button
                android:id="@+id/third_btn_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Escaneos"/>
            
            <Button
                android:id="@+id/third_btn_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Datos del Analizador"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>